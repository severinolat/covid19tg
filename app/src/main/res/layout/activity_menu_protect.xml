<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include android:id="@+id/toolbar_actionbar" layout="@layout/toolbar_default"
        android:layout_width="match_parent" android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/dash_drawable"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="10.3dp"
                android:layout_marginRight="10.3dp"
                android:layout_marginBottom="10dp"
                android:tag="0"
                android:onClick="openMenu"
                android:padding="19.2dp">

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/txt_color"
                        android:textSize="17.3sp"
                        android:text="Se protéger et protéger les autres"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="l y a lieu d'observer les mêmes consignes de précaution que pour toute autre infection respiratoire..."
                        android:textSize="12.5sp"
                        android:textColor="@color/light_gray"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_protectself"

                    />



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/dash_drawable"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="10.3dp"
                android:layout_marginRight="10.3dp"
                android:layout_marginBottom="10dp"
                android:tag="1"
                android:onClick="openMenu"
                android:padding="19.2dp">

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/txt_color"
                        android:textSize="17.3sp"
                        android:text="Porter un masque est-ce utile"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Le port du masque de façon préventive n'est pas préconisé par l'Organisation mondiale de la Santé (OMS)..."
                        android:textSize="12.5sp"
                        android:textColor="@color/light_gray"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_masque"

                    />



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/dash_drawable"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="10.3dp"
                android:layout_marginRight="10.3dp"
                android:layout_marginBottom="10dp"
                android:tag="2"
                android:onClick="openMenu"
                android:padding="19.2dp">

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/txt_color"
                        android:textSize="17.3sp"
                        android:text="En quoi consistent les mesures de distanciation sociale ?"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pratiquer la distanciation sociale, c’est modifier ses habitudes quotidiennes afin de réduire au minimum les contacts..."
                        android:textSize="12.5sp"
                        android:textColor="@color/light_gray"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_distance"

                    />



            </LinearLayout>







        </LinearLayout>
    </ScrollView>

</LinearLayout>