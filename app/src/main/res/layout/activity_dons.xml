<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include android:id="@+id/toolbar_actionbar" layout="@layout/toolbar_default"
        android:layout_width="match_parent" android:layout_height="wrap_content" />


    <LinearLayout
        android:id="@+id/ts"
        android:layout_below="@id/toolbar_actionbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgSoli"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Solidarité Togo Covid 19"
            android:textSize="25sp"
            android:layout_marginTop="12.7dp"
            android:textColor="@color/primary_text"
            android:letterSpacing="0.03"/>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_gravity="center"
            android:textSize="16.7sp"
            android:layout_marginTop="19.7dp"
            android:text="Plusieurs cas de Covid-19 ont été signalés au Togo et le nombre ne cesse d'augmenter.
Plusieurs actions sont menées sur place pour faire face à ce fléau mondial.
Cependant, les équipes de soignants ont très peu de moyens pour affronter le Covid-19. \n \n
Aidons-les !!!"
            android:gravity="center"
            android:textColor="@color/primary_text"
            android:letterSpacing="0.07"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/ts"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/btnSave"
            android:layout_marginBottom="66.7dp"
            android:layout_width="wrap_content"
            android:layout_height="46.1dp"
            android:layout_marginTop="20dp"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:layout_gravity="center"
            android:text="Faire un don"
            android:gravity="center"
            android:textSize="17.3sp"
            android:textColor="#ffffff"
            android:textAllCaps="false"
            android:onClick="openLink"
            android:background="@drawable/round_corner"/>



    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:id="@+id/text"
        android:text="Chacun peut y participer dans la mesure de ses moyens."
        android:textSize="13sp"
        android:layout_marginBottom="24.7dp"
        android:layout_marginTop="12.7dp"
        />

</RelativeLayout>